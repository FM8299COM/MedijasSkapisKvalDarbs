@using MovieScribe.Data.ViewModels;
@model ResetPasswordViewModel

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">

                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Atiestatīt paroli</h2>
                            <p class="text-white-50 mb-5">Lūdzu, ievadiet savu jauno paroli.</p>

                            <form asp-action="ResetPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="Code" type="hidden" />
                                <input asp-for="Email" type="hidden" />
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Jaunā parole" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Apstiprini jauno paroli" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Atiestatīt paroli" />

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
