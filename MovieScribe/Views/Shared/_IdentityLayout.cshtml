@inject UserManager<AppUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        Autorizēties
    </a>
    <span style="padding: 5px;"></span>
    <a class="btn btn-success my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        Reģistrēties
    </a>
}
else
{
    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" id="profile-btn" data-bs-toggle="dropdown"
                aria-expanded="false">
            Darbības
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Media" asp-action="PlanToWatch">
                    Plānots skatīties
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Media" asp-action="Watched">
                    Skatīts
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Media" asp-action="Recommendations">
                    Rekomendācijas
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Account" asp-action="UserDetails">
                    Konts
                </a>
            </li>
        </ul>
    </div>
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-danger my-2 my-sm-0">
            Sesijas pārtraukšana
        </button>
    </form>
}