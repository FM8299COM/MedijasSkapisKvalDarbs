@model DistributorModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-8">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Rediģēt detalizētu informāciju par izplatītāju</h2>

                            @if (Model.ImageData != null)
                            {
                                var base64 = Convert.ToBase64String(Model.ImageData);
                                var imgSrc = String.Format($"data:{Model.ImageMimeType};base64,{base64}");
                                <img src="@imgSrc" class="card-img-top mb-4" alt="..." style="margin-top: 5px; margin-left: auto; margin-right: auto; width: 100%; height: auto; max-height: 400px; object-fit: contain;" />
                            }
                            else
                            {
                                <img src="https://t4.ftcdn.net/jpg/02/51/95/53/360_F_251955356_FAQH0U1y1TZw3ZcdPGybwUkH90a3VAhb.jpg" class="card-img-top mb-4" alt="..." style="margin-top: 5px; margin-left: auto; margin-right: auto; width: 100%; height: auto; max-height: 400px; object-fit: contain;">
                            }

                            <form asp-action="Edit" method="post" enctype="multipart/form-data" style="margin-top: 20px;">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="ID" type="hidden" />

                                <div class="form-outline form-white mb-3">
                                    <input asp-for="Name" class="form-control form-control-md" placeholder="Vārds" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-3">
                                    <input asp-for="Description" class="form-control form-control-md" placeholder="Apraksts" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-3">
                                    <input type="file" id="ImageUpload" name="ImageUpload" class="form-control" accept="image/*" />
                                    <img id="ImagePreview" src="#" alt="Image Preview" style="max-width: 200px; display: none;" />
                                </div>

                                <div class="d-flex justify-content-between">
                                    <input class="btn btn-outline-light btn-md px-5" type="submit" value="Rediģēt" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/imagePreview.js"></script>
}