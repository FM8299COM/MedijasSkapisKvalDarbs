@using MovieScribe.Data.Enumerators;
@model MediaViewModel

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-8">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Add Media</h2>
                            <form asp-action="Create" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-outline form-white mb-3">
                                    <input asp-for="Title" class="form-control form-control-md" placeholder="Title" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-3">
                                    <input asp-for="Runtime" class="form-control form-control-md" placeholder="Runtime" type="number" />
                                    <span asp-validation-for="Runtime" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-3">
                                    <input asp-for="YouTubeLink" class="form-control form-control-md" placeholder="YouTube Link" />
                                    <span asp-validation-for="YouTubeLink" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-3">
                                    <input asp-for="Aired" class="form-control form-control-md" placeholder="Aired" type="date" />
                                    <span asp-validation-for="Aired" class="text-danger"></span>
                                </div>
                                
                                <div class="form-outline form-white mb-3">
                                    <select asp-for="Type" class="form-control form-control-md" asp-items="Html.GetEnumSelectList<MediaType>()"></select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="ProducerID" class="form-control form-control-md" asp-items="ViewBag.ProducerID"></select>
                                            <span asp-validation-for="ProducerID" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="DistributorID" class="form-control form-control-md" asp-items="ViewBag.DistributorID"></select>
                                            <span asp-validation-for="DistributorID" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="StudioID" class="form-control form-control-md" asp-items="ViewBag.StudioID"></select>
                                            <span asp-validation-for="StudioID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="ActorIDs" class="form-control form-control-md" asp-items="ViewBag.ActorIDs" multiple></select>
                                            <span asp-validation-for="ActorIDs" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="GenreIDs" class="form-control form-control-md" asp-items="ViewBag.GenreIDs" multiple></select>
                                            <span asp-validation-for="GenreIDs" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="LanguageIDs" class="form-control form-control-md" asp-items="ViewBag.LanguageIDs" multiple></select>
                                            <span asp-validation-for="LanguageIDs" class="text-danger"></span>
                                        </div>
                                        <div class="form-outline form-white mb-3">
                                            <select asp-for="WriterIDs" class="form-control form-control-md" asp-items="ViewBag.WriterIDs" multiple></select>
                                            <span asp-validation-for="WriterIDs" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-outline form-white mb-3">
                                    <textarea asp-for="Description" class="form-control form-control-md" placeholder="Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-3">
                                    <input type="file" id="ImageUpload" name="ImageUpload" class="form-control" accept="image/*" />
                                    <img id="ImagePreview" src="#" alt="Image Preview" style="max-width: 200px; display: none;" />
                                </div>

                                <div class="d-flex justify-content-between">
                                    <input type="submit" value="Create" class="btn btn-outline-light btn-lg px-5" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/imagePreview.js"></script>
}
