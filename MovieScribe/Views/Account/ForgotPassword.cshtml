@using MovieScribe.Data.ViewModels;
@model ForgotPasswordViewModel;

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">

                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Aizmirsta parole</h2>
                            <p class="text-white-50 mb-5">Lūdzu, ievadiet savu e-pasta adresi. Jūs saņemsit saiti, lai izveidotu jaunu paroli.</p>

                            <form asp-action="ForgotPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Email" id="typeEmailX" class="form-control form-control-lg" placeholder="E-pasta adrese" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Iesniegt" />

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
