@using MovieScribe.Data.ViewModels;
@model LoginViewModel;

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">

                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }

                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="EmailAddress" id="typeEmailX" class="form-control form-control-lg" placeholder="Email address" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Password" id="typePasswordX" class="form-control form-control-lg" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Login" />

                            </form>

                        </div>

                        <div>
                            <p class="mb-0">
                                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-white-50 fw-bold">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
